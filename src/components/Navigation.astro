---
const navItems = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/projects", label: "Projects" },
  { href: "/pinboard", label: "Pinboard" },
  { href: "/contact", label: "Contact" },
];

const currentPath = Astro.url.pathname;
---

<nav class="nav-menu" id="navMenu" aria-hidden="true">
  <div class="nav-backdrop"></div>
  <div class="nav-content">
    {
      navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            "nav-item",
            {
              active:
                currentPath === item.href ||
                (item.href !== "/" && currentPath.startsWith(item.href)),
            },
          ]}
          data-astro-prefetch
          aria-current={currentPath === item.href ? "page" : undefined}
        >
          {item.label}
        </a>
      ))
    }
  </div>
</nav>

<style>
  .nav-menu {
    position: fixed;
    top: var(--header-height);
    right: 0;
    width: 100%;
    height: calc(100vh - var(--header-height));
    pointer-events: none;
    z-index: var(--z-nav);
    visibility: hidden;
  }

  .nav-backdrop {
    position: absolute;
    inset: 0;
    background-color: color-mix(in srgb, var(--bg-primary) 60%, transparent);
    backdrop-filter: blur(8px);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .nav-content {
    position: absolute;
    top: 0;
    right: var(--side-padding);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-md);
  }

  .nav-item {
    font-size: var(--font-size-xl);
    color: var(--contrast-color);
    text-decoration: none;
    padding: var(--space-xs) var(--space-sm);
    opacity: 0;
  }

  .nav-item.active {
    color: var(--accent-primary);
    font-weight: 500;
  }

  .nav-item:hover {
    color: var(--accent-primary);
  }

  .nav-item.active:hover {
    color: var(--accent-hover);
  }

  /* Active State */
  .nav-menu.active {
    pointer-events: auto;
    visibility: visible;
  }

  .nav-menu.active .nav-backdrop {
    opacity: 1;
  }

  .nav-menu.active .nav-item {
    opacity: 1;
  }

  /* Narrow Window Adjustments */
  @media (max-width: 768px) {
    /* Keep the backdrop as is - translucent and blurred */
    .nav-content {
      right: 0;
      width: 100%;
      align-items: center;
      border-bottom: 3px solid var(--contrast-color);
      border-top: 3px solid var(--contrast-color);
      /* Make just the content strip opaque */
      background-color: var(--bg-primary);
      /* Optional: add a subtle transition for the background color */
      transition: background-color var(--transition-normal);
    }
    .nav-item {
      width: 100%;
      text-align: center;
      padding: var(--space-sm);
    }
  }
</style>
