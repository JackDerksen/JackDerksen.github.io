---
const navItems = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/projects", label: "Projects" },
  { href: "/pinboard", label: "Pinboard" },
  { href: "/contact", label: "Contact" },
];
---

<nav class="nav-menu" id="navMenu" aria-hidden="true">
  <div class="nav-backdrop"></div>
  <div class="nav-content">
    {
      navItems.map((item) => (
        <a href={item.href} class="nav-item" data-astro-prefetch>
          {item.label}
        </a>
      ))
    }
  </div>
</nav>

<style>
  .nav-menu {
    position: fixed;
    top: var(--header-height);
    right: 0;
    width: 100%;
    height: calc(100vh - var(--header-height));
    pointer-events: none;
    z-index: var(--z-nav);
    visibility: hidden;
  }

  .nav-backdrop {
    position: absolute;
    inset: 0;
    background-color: color-mix(in srgb, var(--bg-primary) 60%, transparent);
    backdrop-filter: blur(8px);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .nav-content {
    position: absolute;
    top: 0;
    right: var(--side-padding);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-md);
  }

  .nav-item {
    font-size: var(--font-size-xl);
    color: var(--contrast-color);
    text-decoration: none;
    padding: var(--space-xs) var(--space-sm);
    opacity: 0;
  }

  .nav-item:hover {
    color: var(--accent-primary);
  }

  /* Active State */
  .nav-menu.active {
    pointer-events: auto;
    visibility: visible;
  }

  .nav-menu.active .nav-backdrop {
    opacity: 1;
  }

  .nav-menu.active .nav-item {
    opacity: 1;
  }

  /* Mobile Adjustments */
  @media (max-width: 768px) {
    .nav-content {
      right: 0;
      width: 100%;
      align-items: center;
      border-bottom: 3px solid var(--contrast-color);
    }

    .nav-item {
      width: 100%;
      text-align: center;
      padding: var(--space-sm);
    }
  }
</style>
