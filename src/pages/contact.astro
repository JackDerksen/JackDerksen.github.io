---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Mail, Github, Linkedin } from "lucide-astro";
---

<BaseLayout title="Contact | Jack Derksen" description="Get in touch with me">
  <h1>Contact</h1>
  <div class="contact-grid">
    <div class="card contact-info">
      <p style="font-size:110%;">Please feel free to reach out!</p>
      <ul class="contact-links">
        <li>
          <a href="mailto:jmderksen9@gmail.com" class="contact-link">
            <Mail size={25} />
            <span>Email</span>
          </a>
        </li>
        <li>
          <a href="https://github.com/JackDerksen" class="contact-link">
            <Github size={25} />
            <span>GitHub</span>
          </a>
        </li>
        <li>
          <a
            href="https://linkedin.com/in/jack-derksen-6292a1261"
            class="contact-link"
          >
            <Linkedin size={25} />
            <span>LinkedIn</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</BaseLayout>

<style>
  .contact-grid {
    max-width: 500px;
    margin: var(--space-lg) auto 0;
  }

  .contact-links {
    list-style: none;
    padding: 0;
    margin-top: var(--space-md);
  }

  .contact-links li {
    margin-bottom: var(--space-sm);
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm);
    padding-left: var(--space-md);
    border: 2px solid var(--contrast-color);
    border-radius: var(--radius-sm);
    color: var(--contrast-color);
    transition: all var(--theme-transition-duration) ease;
    position: relative;
  }

  .contact-link:hover {
    background-color: var(--bg-secondary);
    color: var(--accent-primary);
  }

  @media (max-width: 768px) {
    .contact-grid {
      padding: 0 var(--space-md);
    }

    .contact-link {
      padding: var(--space-md);
    }
  }
</style>
