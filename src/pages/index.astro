---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Jack Derksen">
  <div class="home-content">
    <h1 class="text-gradient">Hey there!</h1>
    <p class="intro">I'm Jack, a computer science student and wannabe software engineer.</p>
  </div>
</BaseLayout>

<style>
  .home-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl) 0;
  }

  .intro {
    font-size: var(--font-size-lg);
    margin-top: var(--space-lg);
  }
</style>
